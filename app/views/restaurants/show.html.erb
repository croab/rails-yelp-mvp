<div class="container mt-3">
  <%= link_to "Return to list", restaurants_path, class: 'btn btn-primary' %>
</div>
<div class="container mt-3">
  <h2><%= @restaurant.name %></h2>
  <h3><%= @restaurant.category.capitalize %></h3>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
</div>

