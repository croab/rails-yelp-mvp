<div class="container mt-3">
  <%= link_to "Add review", new_restaurant_review_path(@restaurant), class: 'btn btn-success' %>
  <div class="mt-3">
    <% @reviews.each do |review| %>
      <h2><%= review.content %></h2>
      <p><%= review.rating %></p>
    <% end %>
  </div>
</div>
